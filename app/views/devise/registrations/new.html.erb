<div class="container">
  <h1 class="well well-lg">Formulario de Registro</h1>
  <div class="col-lg-12 well">
    <div class="row">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="col-md-12">

          <h3>Datos Personales</h3>
          <hr>
          <div class="row">

            <div class="col-md-4 form-group">
              <label>Nombre</label>
              <%= f.text_field :nombre, class:"form-control", placeholder:"Ej: Juan",:maxlength=>"20"%> 
            </div>

            <div class="col-md-4 form-group">
              <label>Apellido Paterno</label>
              <%= f.text_field :apellidop, class:"form-control", placeholder:"Ej: Castro",:maxlength=>"15"%>
            </div>

            <div class="col-md-4 form-group">
              <label>Apellido Materno</label>
              <%= f.text_field :apellidom, class:"form-control", placeholder:"Ej: Rice",:maxlength=>"15"%>
            </div>

          </div>

          <div class="row">

            <div class="col-xs-8 col-md-3 form-group">
              <label>RUN</label>
               <%= f.text_field :run, placeholder:"Ej: 12345678",class:"form-control",:maxlength=>"8"%> 
            </div>

            <div class="col-xs-4 col-md-1 form-group">
              <label>Dígito</label>
              <%= f.text_field :run_dig_ver, class:"form-control",placeholder:"Ej: k", :size=>"2", :maxlength=>"1"%>
            
            </div>

            <div class="col-md-4 form-group">
              <label>Previsión</label>
              
              <%= f.select :prevision, options_for_select([["Fonasa", "Fonasa"], ["Isapre", "Isapre"]]), {}, {class: "form-control"} %>
            </div>

            <div class="col-md-4 form-group">
              <label>Género</label>

              <%= f.select :sexo, options_for_select([["Masculino", 0], ["Femenino", 1], ["Otro", 2]]), {}, {class:"form-control"} %>

            </div>

          </div>

          <h3>Dirección</h3>
          <hr>
          <div class="row">
            <div class="col-md-4 form-group">
              <label>Calle</label>

              <%= f.text_field :direccion, placeholder: "Ej: Los Leones", class: "form-control", :maxlength=>"25" %>

            </div>
            <div class="col-md-2 form-group">
              <label>Número</label>

              <%= f.text_field :num, placeholder: "Ej 1827", class: "form-control", :maxlength=>"6" %>

            </div>
            <div class="col-md-2 form-group">
              <label>Departamento</label>

              <%= f.text_field :depto, placeholder: "Ej: 622", class: "form-control", :maxlength=>"6" %>

            </div>
            <div class="col-md-4 form-group">
              <label>Comuna</label>
              
              <%= f.select :comuna, options_for_select([["Cerrillos", 1], ["El Bosque", 2], ["Estación Central", 3], ["Huechuraba", 4], ["Independencia", 5], ["La Pintana", 6], ["La Reina", 7], ["Las Condes", 8], ["Maipú", 9], ["Santiago", 10]]), {}, {class:"form-control"} %>

            </div>
          </div>

          <h3>Contacto</h3>
          <hr>
          <div class="row">
            <div class="col-md-6 form-group">
              <label>Email</label>

              <%= f.text_field :email, placeholder: "Ej: juan.perez@gmail.com", class: "form-control", :maxlength=>"20" %>

            </div>
            <div class="col-md-4 form-group">
              <label>Teléfono</label>
              
              <%= f.text_field :telefono, placeholder: "Ej: 22833938", class: "form-control", :maxlength=>"8" %>

            </div>
          </div>

          <h3>Contraseña</h3>
          <hr>
          <div class="row">
            <div class="col-md-7 form-group">
              <label>Contraseña (Minimo 6 caracteres)</label>
              
              <%= f.password_field :password, autocomplete: "off", class: "form-control", :maxlength=>"20" %>

            </div>
            <div class="col-md-7 form-group">
              <label>Repita Contraseña</label>
              
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",:maxlength=>"20" %>

            </div>
          </div>

        

<%= f.submit "Registrarse", class:"btn btn-lg btn-default" %>

          
        </div>













<% end %>


  </div>
  </div>
</div>


<% render "devise/shared/links" %>
